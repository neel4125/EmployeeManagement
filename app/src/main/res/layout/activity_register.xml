<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:gravity="center"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Choose Registration Type"
            android:layout_height="wrap_content">

        </TextView>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/lilSupervisor"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="0dp">
                <ImageButton
                    android:layout_width="150dp"
                    android:src="@drawable/supervisor"
                    android:scaleType="fitXY"
                    android:layout_height="150dp">
                </ImageButton>
                <TextView
                    android:layout_width="match_parent"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:text="Register as a Supervisor"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lilEmployee"
                android:layout_weight="0.7"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageButton
                    android:layout_width="150dp"
                    android:src="@drawable/employee"
                    android:scaleType="fitXY"
                    android:layout_height="150dp">
                </ImageButton>
                <TextView
                    android:layout_width="match_parent"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:text="Register as an Employee"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>